{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "groupName": "main",
      "matchPackagePatterns": [
        "typescript",
        "react",
        "react-dom",
        "@types/react-dom",
        "@types/react"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "labels": [
        "patch"
      ],
      "automerge": true,
      "schedule": [
        "on the first day of the month"
      ]
    },
    {
      "groupName": "common",
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "excludePackagePatterns": [
        "typescript",
        "react",
        "react-dom",
        "@types/react-dom",
        "@types/react"
      ],
      "automerge": true,
      "labels": [
        "patch"
      ],
      "schedule": [
        "every weekend"
      ]
    }
  ],
  "timezone": "Europe/Berlin"
}
